<%= render @restaurant %>

<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>
  <%= link_to "Voir le chef", chef_restaurant_path(@restaurant) %>
  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
</div>



<div class="container">
  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
          <%= review.content %>
          <%= link_to "Delete", review_path(review), data: {turbo_method: :delete, turbo_confirm: "ok?"}%>
      </li>
    <% end %>
  </ul>
</div>
